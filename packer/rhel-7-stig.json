{

  "variables": {
    "aws_region": "",

    "k8s_version": "",
    "k8s_build_date": "",
    "cni_version": "",
    "cni_plugin_version": "",

    "ami_name": "rhel7-stig",
    "ami_description": "A STIG EKS base image based on RHEL 7 Build Date: {{ isotime }}",

    "source_ami_name": "RHEL-7.7_HVM_GA-*-x86_64-1-Hourly2-GP2",
    "source_ami_owner": "309956199498",
    "source_ami_ssh_user": "ec2-user",

    "vpc_id": "",
    "subnet_id": ""
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "name": "{{user `source_ami_name`}}",
          "root-device-type": "ebs",
          "state": "available",
          "virtualization-type": "hvm",
          "architecture": "x86_64"
        },
        "owners": [ "{{user `source_ami_owner`}}" ],
        "most_recent": true
      },
      "instance_type": "m5.large",
      "ssh_username": "{{user `source_ami_ssh_user`}}",
      "ssh_pty": true,
      "subnet_id": "{{user `subnet_id`}}",
      "tags": {
          "Name": "eks-{{user `ami_name`}}-{{ timestamp }}",
          "BuildDate": "{{ isotime }}",
          "Kubernetes-Version": "{{user `k8s_version`}}",
          "Kubernetes-BuildDate": "{{user `k8s_build_date`}}",
          "CNI-Version": "{{user `cni_version`}}",
          "CNI-Plugin-Version": "{{user `cni_plugin_version`}}",
          "STIG": "Yes"
      },
      "ami_name": "eks-{{user `ami_name`}}-{{ timestamp }}",
      "ami_description": "{{ user `ami_description` }}",
      "ami_virtualization_type": "hvm",
      "run_tags": {
        "Name": "packer-builder-eks-{{user `ami_name`}}-ami"
      }
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 5; done"
    },
    {
      "type": "ansible",
      "playbook_file": "../ansible/eks.yml",
      "user": "{{user `source_ami_ssh_user`}}",
      "extra_arguments": [
        "--become",
        "--become-method=sudo",
        "--become-user=root",
        "--extra-vars",
        "ansible_python_interpreter=/bin/python aws_region={{user `aws_region`}} k8s_version={{user `k8s_version`}} k8s_build_date={{user `k8s_build_date`}} cni_version={{user `cni_version`}} cni_plugin_version={{user `cni_plugin_version`}} is_stig_enabled=yes"
      ]
    }
  ]
}
